.photo-area {
  font-family: var(--primary-italic-font);
  color: var(--primary-text-color);
  font-size: 14px;
  position: relative;
  font-weight: normal;
  margin-bottom: 30px;
  padding-bottom: 10px;

  &:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 440px;
    height: 1px;
    background-color: var(--eighth-border-color);
  }
}
