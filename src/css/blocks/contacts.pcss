.contacts {
  
  &__contacts {
    text-align: left;
    max-width: 902px;
    margin: 0 auto;
    padding-top: 54px;
    padding-left: 10px;
    padding-right: 10px;
  }

  &__content-container {
    padding-bottom: 15px;
  }
  
  &__content {
    font-family: var(--primary-font);
    font-size: 13px;
    line-height: 1.3;
    color: var(--primary-text-color);

    @media (--desktop-small) {
      padding-left: 14px;
    }
  }

  &__link {
    color: var(--secondary-accent-color);
  }
}