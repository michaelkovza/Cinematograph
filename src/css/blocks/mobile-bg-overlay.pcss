.mobile-bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  transition: opacity 0.3s linear;

  &--hidden {
    opacity: 0;
    z-index: -1;
  }

  &__button {
    background: url('../../images/navigate/close.svg') no-repeat center;
    background-size: 100%;
    width: 20px;
    height: 20px;
    display: inline-block;
    padding: 0;
    position: absolute;
    right: 15px;
    top: 15px;
  }
}