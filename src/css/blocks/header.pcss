.header {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;

  &__navigate {
    background-color: var(--accent-color);
    text-align: center;
    color: var(--secondary-accent-color);
  }

  &__navigate-link {
    font-family: var(--secondary-font);
    font-size: 18px;
  }

  &__logo {
    width: 180px;
  }

  &__link {
    display: block;
    margin: 14px auto 35px;
  }
}

